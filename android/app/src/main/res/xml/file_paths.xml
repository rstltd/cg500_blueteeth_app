<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Internal app storage for downloaded APKs -->
    <files-path name="files" path="." />
    
    <!-- App-specific documents directory (app_flutter) -->
    <files-path name="app_flutter" path="app_flutter/" />
    
    <!-- External app storage - required for getApplicationDocumentsDirectory() -->
    <external-files-path name="external_files" path="." />
    
    <!-- Cache directory -->
    <cache-path name="cache" path="." />
    
    <!-- External cache directory -->
    <external-cache-path name="external_cache" path="." />
    
    <!-- Downloads directory for APK updates -->
    <external-path name="downloads" path="Download/" />
    
    <!-- Documents directory - covers getApplicationDocumentsDirectory() path -->
    <external-files-path name="documents" path="Documents/" />
    
    <!-- Root external storage (for broader compatibility) -->
    <external-path name="external_storage" path="." />
    
    <!-- Root files directory for broader internal storage coverage -->
    <root-path name="root" path="." />
</paths>